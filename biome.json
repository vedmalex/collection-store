{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      },
      "nursery": {
        "useAwait": "warn"
      },
      "performance": {
        "noDelete": "warn"
      },
      "suspicious": { "noExplicitAny": "off" },
      "complexity": {
        "noUselessConstructor": "off",
        "noStaticOnlyClass": "off",
        "noThisInStatic": "off",
        "noUselessThisAlias": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf",
    "ignore": []
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "trailingComma": "all",
      "quoteStyle": "single",
      "bracketSpacing": true
    }
  }
}
